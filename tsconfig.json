{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "moduleResolution": "node"
  },
  "include": [
    "index.ts",
    "tools.ts",
    "tasks/compile.ts",
    "tasks/selectors.ts"
  ],
  "exclude": ["node_modules", "dist", "**/__tests__/*"],
  "references": [{ "path": "./tsconfig.cjs.json" }]
}
